---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { getCollection } from "astro:content";
import BlogPost from "../../components/BlogPost.astro";

const blogPosts = await getCollection("posts", (post) => {
  return post.data.draft !== true && post.id.includes("en/");
});

const posts = blogPosts.map((post) => {
  const [postLang, ...slug] = post.slug.split("/");
  return {
    params: { lang: postLang, slug: slug.join("/") || undefined },
    props: post,
  };
});

const pageTitle = "Blog";
const pageLang = getLangFromUrl(Astro.url);
const t = useTranslations(pageLang);
---

<BaseLayout pageTitle={pageTitle}>
  <section class="posts">
    <h1 class="posts__title">{t("blog.title")}</h1>
    {
      posts.length ? (
        <ul class="posts__grid">
          {posts.map((post) => (
            <BlogPost
              url={`/${post.params.lang}/posts/${post.params.slug}/`}
              post={post}
            />
          ))}
        </ul>
      ) : (
        <p>{t("blog.no-posts")}</p>
      )
    }
  </section>
</BaseLayout>

<style>
  .posts {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .posts__title {
    margin-bottom: 2rem;
  }
  .posts__grid {
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    grid-gap: 2em;
  }

  @media only screen and (min-width: 768px) {
    .posts__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
